@page "/productos/presentaciones"
@rendermode InteractiveServer

@using PackingApp.Services
@inject ProductosService ProductosService

<PageTitle>Presentaciones de Productos</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1>Presentaciones de Productos</h1>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-success me-2" @onclick="MostrarFormulario">
                <span class="bi bi-plus-circle"></span> Nuevo
            </button>
            <button class="btn btn-primary" @onclick="RefreshData">
                <span class="bi bi-arrow-clockwise"></span> Actualizar
            </button>
        </div>
    </div>

    @if (cargando)
    {
        <div class="alert alert-info">
            <span class="spinner-border spinner-border-sm me-2"></span>
            Cargando presentaciones...
        </div>
    }
    else if (presentacionesResult == null)
    {
        <div class="alert alert-danger">
            Error al cargar las presentaciones
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                @if (presentacionesResult.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Fecha Creación</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var presentacion in presentacionesResult.Items)
                                {
                                    <tr>
                                        <td><strong>@presentacion.Nombre</strong></td>
                                        <td>@presentacion.Descripcion</td>
                                        <td>@presentacion.FechaCreacion</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletePresentacion(presentacion.Id)">
                                                <span class="bi bi-trash"></span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginación -->
                    <nav aria-label="Paginación">
                        <ul class="pagination justify-content-center mt-4">
                            <li class="page-item @(presentacionesResult.PageNumber == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(1)">Primera</button>
                            </li>
                            <li class="page-item @(!presentacionesResult.HasPreviousPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(presentacionesResult.PageNumber - 1)">Anterior</button>
                            </li>

                            @for (int i = Math.Max(1, presentacionesResult.PageNumber - 2); i <= Math.Min(presentacionesResult.TotalPages, presentacionesResult.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == presentacionesResult.PageNumber ? "active" : "")">
                                    <button class="page-link" @onclick="() => LoadPage(i)">@i</button>
                                </li>
                            }

                            <li class="page-item @(!presentacionesResult.HasNextPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(presentacionesResult.PageNumber + 1)">Siguiente</button>
                            </li>
                            <li class="page-item @(presentacionesResult.PageNumber == presentacionesResult.TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(presentacionesResult.TotalPages)">Última</button>
                            </li>
                        </ul>
                    </nav>

                    <div class="alert alert-secondary mt-3">
                        <small>Mostrando <strong>@presentacionesResult.Items.Count</strong> de <strong>@presentacionesResult.TotalCount</strong> presentaciones (Página @presentacionesResult.PageNumber de @presentacionesResult.TotalPages)</small>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        No hay presentaciones registradas
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Modal de Nueva Presentación -->
@if (mostrarFormulario)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nueva Presentación</h5>
                    <button type="button" class="btn-close" @onclick="OcultarFormulario"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nuevoNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nuevoNombre" @bind="nuevaPresentacion.Nombre" placeholder="Nombre de la presentación">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="OcultarFormulario">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="CrearPresentacion">Crear</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private PaginatedResult<PresentacionDto>? presentacionesResult;
    private bool cargando = true;
    private int paginaActual = 1;
    private const int elementosPorPagina = 10;
    private bool mostrarFormulario = false;

    private class NuevaPresentacionForm
    {
        public string Nombre { get; set; } = string.Empty;
    }

    private NuevaPresentacionForm nuevaPresentacion = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(1);
    }

    private async Task LoadPage(int page)
    {
        try
        {
            cargando = true;
            paginaActual = page;
            presentacionesResult = await ProductosService.GetPresentacionesAsync(page, elementosPorPagina);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadPage(paginaActual);
    }

    private async Task DeletePresentacion(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("SwalHelper.confirmDelete", "¿Eliminar presentación?", "Esta acción no se puede deshacer.");
        if (!confirmed) return;

        try
        {
            await ProductosService.DeletePresentacionAsync(id);
            await RefreshData();
            await JSRuntime.InvokeVoidAsync("SwalHelper.success", "Éxito", "Presentación eliminada correctamente");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("SwalHelper.error", "Error", $"Error al eliminar: {ex.Message}");
        }
    }

    private void MostrarFormulario()
    {
        nuevaPresentacion = new();
        mostrarFormulario = true;
    }

    private void OcultarFormulario()
    {
        mostrarFormulario = false;
    }

    private async Task CrearPresentacion()
    {
        if (string.IsNullOrWhiteSpace(nuevaPresentacion.Nombre))
        {
            await JSRuntime.InvokeVoidAsync("SwalHelper.warning", "Validación", "Por favor completa el nombre");
            return;
        }

        try
        {
            await ProductosService.CreatePresentacionAsync(nuevaPresentacion.Nombre);
            OcultarFormulario();
            await RefreshData();
            await JSRuntime.InvokeVoidAsync("SwalHelper.success", "Éxito", "Presentación creada exitosamente");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("SwalHelper.error", "Error", $"Error al crear presentación: {ex.Message}");
        }
    }

    @inject IJSRuntime JSRuntime
}
